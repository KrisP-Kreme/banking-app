@model BankingApplication.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
} 

@* <h2 style="max-width: 280px; margin: auto;">Login to MCBA</h2> *@

<form asp-action="Login" method="post">
    <div class="card shadow-sm" style="max-width: 400px; margin: auto; margin-top: 200px;">
        <div class="card-header bg-black text-white text-center">
            <h4 class="mb-0">Login to MCBA</h4>
        </div>
        <div class="card-body bg-light rounded">
            <div class="mb-3">
                <label asp-for="LoginID" class="form-label"></label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
