@model BankingApplication.Models.Customer
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-teal">My Profile</h1>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="fw-bold card-header text-white text-center fw-semibold" style="background-color: #0ed2f7; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            Your Details
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <tr><th>Name</th><td>@Model.Name</td></tr>
                    <tr><th>TFN</th><td>@Model.TFN</td></tr>
                    <tr><th>Address</th><td>@Model.Address</td></tr>
                    <tr><th>City</th><td>@Model.City</td></tr>
                    <tr><th>State</th><td>@Model.State</td></tr>
                    <tr><th>Postcode</th><td>@Model.Postcode</td></tr>
                    <tr><th>Mobile</th><td>@Model.Mobile</td></tr>
                </table>
            </div>
            <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
            <a asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>
        </div>
    </div>
</div>

