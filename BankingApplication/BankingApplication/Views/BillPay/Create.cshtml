@model BankingApplication.ViewModels.BillPayViewModel

<h2>Schedule a Bill Payment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BillPay.PayeeID">Select Payee</label>
        <select asp-for="BillPay.PayeeID" class="form-control"
                asp-items="@(new SelectList(Model.Payees, "PayeeID", "Name"))">
            <option value="">-- Choose Payee --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BillPay.Amount">Amount</label>
        <input asp-for="BillPay.Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BillPay.ScheduleTimeUtc">Scheduled Date</label>
        <input asp-for="BillPay.ScheduleTimeUtc" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
